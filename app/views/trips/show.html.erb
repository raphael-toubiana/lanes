<%= render 'banner', trip: @trip %>
<div class= "container mt-5">
    <%= link_to "Retour", root_path, class:"link-secondary" %>
    <%= render 'trip', trip: @trip %>
    <%= link_to "Modifier", edit_trip_path(@trip), class: "btn btn-light" %>
    <%= link_to "Supprimer", trip_path(@trip),
      data: { turbo_method: :delete,
              turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet itinéraire ?"
              } ,
      class: "btn btn-danger"
    %>
    <div class = "mt-3">
        <h2> Avis</h2>
        <%= render 'reviews', trip: @trip %>
        <%= link_to "Ajouter un avis", new_trip_review_path(@trip), class: "btn btn-primary mt-3"  %>
    </div>
</div>
